<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/TableLayout1"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:weightSum="7"
	tools:context="com.example.draganddropmy.MainActivity" >

	<TableRow
		android:id="@+id/tableRow1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:gravity="center"
		android:weightSum="3" >

		<Button
			android:id="@+id/but1"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:text="@string/but1" />

		<Button
			android:id="@+id/but2"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:text="@string/but2" />

		<Button
			android:id="@+id/but3"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:text="@string/but3" />
	</TableRow>

	<TableRow
		android:id="@+id/tableRow2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:gravity="center"
		android:weightSum="3" >

		<Button
			android:id="@+id/but4"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:text="@string/but4" />

		<Button
			android:id="@+id/but5"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:text="@string/but5" />

		<Button
			android:id="@+id/but6"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:text="@string/but6" />
	</TableRow>

	<TableRow
		android:id="@+id/tableRow3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:gravity="center"
		android:weightSum="3" >

		<Button
			android:id="@+id/but7"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:text="@string/but7" />

		<Button
			android:id="@+id/but8"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:text="@string/but8" />

		<Button
			android:id="@+id/but9"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:text="@string/but9" />
	</TableRow>

	<TableRow
		android:id="@+id/tableRow4"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:gravity="center"
		android:weightSum="4" >

		<TextView
			android:id="@+id/textView1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="8dp"
			android:layout_weight="1"
			android:gravity="right|center"
			android:text="@string/score_label"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/textView2"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="left|center"
			android:text="@string/score" />

		<TextView
			android:id="@+id/textView3"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginRight="3dp"
			android:layout_weight="1"
			android:gravity="center"
			android:text="@string/time_label"
			android:textStyle="bold" />

		<Chronometer
			android:id="@+id/chronometer1"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="left|center"
			android:text="Chronometer" />
	</TableRow>

	<TableRow
		android:id="@+id/tableRow5"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_weight="1"
		android:background="@drawable/cell_shape"
		android:gravity="center"
		android:weightSum="4" >

		<TextView
			android:id="@+id/textView4"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/cell_shape"
			android:gravity="center"
			android:text="+"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/textView5"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/cell_shape"
			android:gravity="center"
			android:text="-"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/textView6"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/cell_shape"
			android:gravity="center"
			android:text="x"
			android:textStyle="bold" />

		<TextView
			android:id="@+id/textView7"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/cell_shape"
			android:gravity="center"
			android:text="/"
			android:textStyle="bold" />
	</TableRow>

	<TableRow
		android:id="@+id/tableRow6"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_gravity="center"
		android:layout_weight="1"
		android:background="@drawable/cell_shape"
		android:gravity="center"
		android:weightSum="4" >

		<TextView
			android:id="@+id/textView10"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/cell_shape"
			android:gravity="center"
			android:text="@string/count_sum" />

		<TextView
			android:id="@+id/textView9"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/cell_shape"
			android:gravity="center"
			android:text="@string/count_diff" />

		<TextView
			android:id="@+id/textView8"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/cell_shape"
			android:gravity="center"
			android:text="@string/count_multi" />

		<TextView
			android:id="@+id/textView11"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/cell_shape"
			android:gravity="center"
			android:text="@string/count_div" />
	</TableRow>

	<TableRow
		android:id="@+id/tableRow7"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:gravity="center"
		android:weightSum="4" >
	</TableRow>

</TableLayout>